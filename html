<body>

<h2>ðŸŒ¸ Pastelaria da Nathy ðŸŒ¸</h2>

<div class="card">
    <h3>Adicionar Pedido</h3>

    <input id="nome" type="text" placeholder="Nome do cliente">
    <input id="valor" type="number" placeholder="Valor total (R$)">
    
    <select id="status">
        <option value="Pago">Pago</option>
        <option value="Pendente">Pendente</option>
    </select>

    <button onclick="adicionarPedido()">Adicionar Pedido</button>
</div>

<h3>Lista de Pedidos</h3>

<table id="tabela">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Valor</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<div class="card">
    <h3>Resumo</h3>
    <p>Total Pago: <b id="totalPago">R$0</b></p>
    <p>Total Pendente: <b id="totalPendente">R$0</b></p>
    <p>Total Geral: <b id="totalGeral">R$0</b></p>
</div>

<script>
    let pedidos = JSON.parse(localStorage.getItem("pedidos")) || [];

    function salvar() {
        localStorage.setItem("pedidos", JSON.stringify(pedidos));
    }

    function atualizarTabela() {
        const tbody = document.querySelector("#tabela tbody");
        tbody.innerHTML = "";

        let totalPago = 0;
        let totalPendente = 0;

        pedidos.forEach((p, i) => {
            let tr = document.createElement("tr");

            tr.innerHTML = `
                <td>${p.nome}</td>
                <td>R$${p.valor}</td>
                <td class="${p.status === 'Pago' ? 'pago' : 'pendente'}">${p.status}</td>
                <td><button class="btn-excluir" onclick="excluir(${i})">X</button></td>
            `;

            tbody.appendChild(tr);

            if (p.status === "Pago") totalPago += Number(p.valor);
            else totalPendente += Number(p.valor);
        });

        document.getElementById("totalPago").innerText = "R$" + totalPago;
        document.getElementById("totalPendente").innerText = "R$" + totalPendente;
        document.getElementById("totalGeral").innerText = "R$" + (totalPago + totalPendente);
    }

    function adicionarPedido() {
        const nome = document.getElementById("nome").value;
        const valor = document.getElementById("valor").value;
        const status = document.getElementById("status").value;

        if (!nome || !valor) {
            alert("Preencha o nome e o valor!");
            return;
        }

        pedidos.push({ nome, valor, status });
        salvar();
        atualizarTabela();

        document.getElementById("nome").value = "";
        document.getElementById("valor").value = "";
    }

    function excluir(i) {
        pedidos.splice(i, 1);
        salvar();
        atualizarTabela();
    }

    atualizarTabela();
</script>

</body>
